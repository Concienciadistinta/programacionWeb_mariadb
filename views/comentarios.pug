extends ./layout/index.pug 
block compartircontenido
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        .row
            .col-md-12
                h2.d-block.w-100.text-center Agregar Comentarios 
                if (errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center=error.mensaje
            .row.justify-content-center.col 
                .col-md-8
                    form(action="/comentarios" method="POST")
                        .form-group 
                            label(for="correo") Correo 
                            input#correo(type="text", placeholder="tu correo" name="correo"
                            ,class="form-control", value=correo)
                        .form-group 
                            label(for="imagen") Imagen 
                            input#imagen(type="text", placeholder="tu imagen" name="imagen"
                            ,class="form-control", value=imagen)
                        .form-group 
                            label(for="opinion") Opinion
                            textarea#opinion(type="text", placeholder="tu opinion" name="opinion"
                            ,class="form-control", row=3)=opinion 
                        input.btn.btn-succes.btn-block(type="submit")             